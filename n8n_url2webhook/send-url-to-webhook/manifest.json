{
  "manifest_version": 3,
  "name": "URL to n8n Webhook",
  "version": "1.1.0",
  "description": "Send the current page URL to n8n webhooks. Trigger workflows instantly from any webpage.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "send-url-command": {
      "suggested_key": { "default": "Ctrl+Shift+U", "mac": "Command+Shift+U" },
      "description": "Send current tab URL to webhook"
    }
  }
}

